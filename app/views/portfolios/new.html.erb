<h1>Create a new Portfolio item</h1>

<%= form_with(model: @portfolio_item, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :@portfolio_item_title %>
  </div>
  
  <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :@portfolio_item_subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :@portfolio_item_body %>
  </div>
  
  <ul>
    <%= f.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>