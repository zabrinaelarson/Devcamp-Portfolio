<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :@portfolio_item_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, id: :@portfolio_item_subtitle, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>
      
      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>
        
    </div>
    
    <div class="col-md-6">
      <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, id: :@portfolio_item_body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <hr>

    <div class="col-md-12">
      <h2>Technologies Used:</h2>
      
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      
      <div class="actions">
        <%= form.submit "Save Portfolio Item", class: 'btn btn-success btn-block' %>
      </div>
    </div>
  </div>
<% end %>