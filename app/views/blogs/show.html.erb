<div class="col-sm-8 blog-main">
	<div class="card  blog-card">
		<h2 class="cus-header"><%= @blog.title %></h2>

		<nav class="breadcrumb blogcrumb">
		<%= link_to 'Home', root_path, class: 'breadcrumb-item' %>
		<%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
		<span class="breadcrumb-item active"><%= @blog.title %></span>


		<span class="breadcrumb-icons">
			<%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class:'breadcrumb-icon' if logged_in?(:site_admin) %>
			<%= link_to fa_icon('trash'), @blog, class:'breadcrumb-icon', method: :delete, data: { confirm: 'Are you sure?' }  if logged_in?(:site_admin) %>
		</span>
		</nav>

		<p><%= @blog.topic.title %></p>
	  
		<%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
	  
		<p><%= markdown @blog.body %></p>
	</div>
 
</div>



